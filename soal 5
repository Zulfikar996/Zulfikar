#include<conio.h>
#include<stdio.h>
#include<string.h>
#include<cstdlib>
#include<ctype.h>
using namespace std;

int main ()
{
		int n, a, b;
	printf("Masukan ukuran peregi = ");
	scanf("%d", &n);
	for (a=1; a<=n; a++){
		for( b=1; b<=n;  b++){
			if(a==1 || a==n || b==1 || b==n){
				printf("*");
			}
			else{
				printf(" ");
			}
		}
		printf("\n");
	}
	getch ();
}
