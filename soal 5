#include<conio.h>
#include<iostream>
#include<stdio.h>
#include<string.h>
using namespace std;

main (){
	int data[100];
	int i, j, n, k, l, temp;
	printf("Masukan banyak data saham hari ini = ");
	scanf("%d",&n);
	printf("Masukan data saham perharinya =  \n");
	for(i=0;i<n;i++){
		cin>>data[i];
	}
	k=0;
	temp=0;
	for(j=1;j<n;j++){
		if(data[j-1]>data[j]){
			k=0;
		}
		else{
			l=data[j]-data[j-1];
			k=k+l;
			if(k>temp){
				temp=k;
			}
		}
	}
	if(temp>0){
		printf("\nkeuntungan paling besar= %d",temp);
	}
	else{
		printf("Tidak bisa mendapatkan profit pada hari-hari ini");
	}
	
	getch();
}
